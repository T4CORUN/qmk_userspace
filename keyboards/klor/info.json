{
    "manufacturer": "GEIST",
    "maintainer": "t4corun",
    "audio": {
        "driver": "pwm_hardware",
        "voices": true
    },
    "bootloader": "rp2040",
    "bootmagic": {
        "enabled": true
    },
    "diode_direction": "COL2ROW",
    "encoder": {
        "rotary": [
            {"pin_a": "GP28", "pin_b": "GP29", "resolution": 2}
        ]
    },
    "features": {
        "audio": false,
        "console": false,
        "encoder": true,
        "extrakey": true,
        "haptic": false,
        "oled": true,
        "rgb_matrix": false,
        "rgblight": false,
        "swap_hands": true
    },
    "haptic": {
        "driver": "drv2605l"
    },
    "matrix_pins": {
        "cols": ["GP27", "GP26", "GP22", "GP20", "GP23", "GP21"],
        "rows": ["GP5", "GP6", "GP7", "GP8"]
    },
    "mouse_key": {
        "enabled": false
    },
    "processor": "RP2040",
    "qmk": {
        "locking": {
            "enabled": false,
            "resync": false
        }
    },
    "rgblight": {
        "led_count": 100,
        "animations": {
            "breathing": true,
            "snake": true
        },
        "default": {
            "animation": "breathing",
            "hue": 4,
            "sat": 79,
            "speed": 32,
            "val": 59
        },
        "driver": "ws2812",
        "sleep": true,
        "split": true
    },
    "rgb_matrix": {
        "animations": {
            "breathing": true,
            "cycle_left_right": true,
            "cycle_pinwheel": true,
            "cycle_up_down": true,
            "digital_rain": true,
            "hue_breathing": true,
            "splash": true,
            "typing_heatmap": true
        },
        "default": {
            "animation": "cycle_pinwheel",
            "hue": 4,
            "sat": 79,
            "speed": 32,
            "val": 59
        },
        "driver": "ws2812",
        "max_brightness": 180,
        "sleep": true,
        "timeout": 60000
    },
    "split": {
        "enabled": true,
        "encoder": {
            "right": {
                "rotary": [
                    {"pin_a": "GP29", "pin_b": "GP28", "resolution": 2}
                ]
            }
        },
        "serial": {
            "driver": "vendor",
            "pin": "GP1"
        },
        "transport": {
            "protocol": "serial",
            "sync": {
                "haptic": true,
                "matrix_state": true,
                "oled": true
            }
        }
    },
    "tapping": {
        "term": 170,
        "term_per_key": true
    },
    "url": "https://github.com/GEIGEIGEIST/KLOR",
    "usb": {
        "vid": "0x3A3C"
    },
    "ws2812": {
        "driver": "vendor",
        "pin": "GP0"
    }
}
